<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="#fff"
    android:id="@+id/llMenuDetails"
    android:weightSum="11"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">



        <TextView
            android:id="@+id/txtMenuItemNumber"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1"/>

        <LinearLayout
            android:id="@+id/llMenuFoodDetails"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="5">


            <TextView
                android:id="@+id/txtMenuItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="food item"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="17sp"
                android:paddingBottom="2dp"
                />

            <TextView
                android:id="@+id/txtMenuItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:text="Price"
                />


        </LinearLayout>


        <Button
            android:id="@+id/btnMenuItemAdd"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="4"
            android:text="Add"
            android:textColor="#fff"
            android:background="#4c8c4a"/>

    </LinearLayout>

